{
  "permissions": {
    "allow": [
      "Bash(echo:*)",
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(curl:*)",
      "Bash(nc:*)",
      "Bash(ssh:*)",
      "Bash(npm install:*)",
      "Bash(chmod:*)",
      "Bash(./deploy-to-ec2.sh)",
      "Bash(git rm:*)",
      "Bash(if [ -f .env ])",
      "Bash(then cp .env ../AppForDadSecrets/.env)",
      "Bash(fi)",
      "Bash(if [ -f carl2.pem ])",
      "Bash(then mv carl2.pem ../AppForDadSecrets/)",
      "Bash(if [ -f carl3private.pem ])",
      "Bash(then mv carl3private.pem ../AppForDadSecrets/)",
      "Bash(ln:*)",
      "Bash(cd:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose restart:*)",
      "Bash(grep:*)",
      "Bash(docker-compose ps:*)"
    ]
  }
}
